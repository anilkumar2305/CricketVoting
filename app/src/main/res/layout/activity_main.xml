<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_43409660072cb8e95d1a6d0da123905"
    tools:context=".login">

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@android:color/background_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/usernamel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_account_circle_24"
                android:hint="Username"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/passwordl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textWebPassword"
                android:drawableLeft="@drawable/ic_sharp_error_24"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/forgetp"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="195dp"
                android:layout_marginEnd="15dp"
                android:padding="10dp"
                android:text="ForgetPassword"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/loginbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#D50000"
                android:hint="LOGIN"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/donot"
        android:layout_width="175dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="339dp"
        android:text="Do not have acc?"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/signup"
        android:layout_width="175dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="55dp"
        android:layout_marginStart="206dp"
        android:layout_marginBottom="340dp"
        android:text="Signup"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cricket"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="italic"
        android:layout_marginTop="530dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>